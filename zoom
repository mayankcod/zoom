<body>
  <div class="zoom-form">
    <h2>Join Zoom Meeting</h2>
    <input type="text" id="meetingId" placeholder="Meeting ID" required />
    <input type="text" id="passcode" placeholder="Passcode (optional)" />
    <button onclick="joinZoom()">Join Meeting</button>
  </div>

  <script>
    function joinZoom() {
      const meetingId = document.getElementById("meetingId").value.trim();
      const passcode = document.getElementById("passcode").value.trim();
      if (!meetingId) {
        alert("Please enter a Meeting ID.");
        return;
      }
      let url = `https://zoom.us/j/${meetingId}`;
      if (passcode) {
        url += `?pwd=${encodeURIComponent(passcode)}`;
      }
      window.open(url, "_blank");
    }
  </script>
</body>
